{
  "info": {
    "_postman_id": "service-category-api-collection",
    "name": "Service Category API",
    "description": "Complete API collection for Service Category Management Application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "description": "Authentication endpoints",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"phoneNumber\": \"+251911234567\",\n  \"password\": \"password123\",\n  \"passwordConfirm\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signup"]
            },
            "description": "Register a new user"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+251911234567\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Login with phone number and password"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            },
            "description": "Logout current user"
          },
          "response": []
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            },
            "description": "Get logged-in user profile"
          },
          "response": []
        },
        {
          "name": "Update Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"password123\",\n  \"newPassword\": \"newpassword123\",\n  \"passwordConfirm\": \"newpassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/updatePassword",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "updatePassword"]
            },
            "description": "Update password for logged-in user"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Officers",
      "description": "Officer management endpoints",
      "item": [
        {
          "name": "Get All Officers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/officers",
              "host": ["{{baseUrl}}"],
              "path": ["officers"]
            },
            "description": "Get all officers (public)"
          },
          "response": []
        },
        {
          "name": "Get Officer by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/officers/:id",
              "host": ["{{baseUrl}}"],
              "path": ["officers", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "OFFICER_ID_HERE"
                }
              ]
            },
            "description": "Get single officer by ID (public)"
          },
          "response": []
        },
        {
          "name": "Create Officer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tinNumber\": \"TIN123456789\",\n  \"title\": \"Senior Legal Officer\",\n  \"bio\": \"Experienced legal professional with 10+ years in corporate law.\",\n  \"priceMin\": 500,\n  \"priceMax\": 2000,\n  \"isAvailable\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/officers",
              "host": ["{{baseUrl}}"],
              "path": ["officers"]
            },
            "description": "Create new officer (Admin/Super-Admin only)"
          },
          "response": []
        },
        {
          "name": "Update Officer",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Title\",\n  \"bio\": \"Updated bio information\",\n  \"priceMin\": 600,\n  \"priceMax\": 2500,\n  \"isAvailable\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/officers/:id",
              "host": ["{{baseUrl}}"],
              "path": ["officers", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "OFFICER_ID_HERE"
                }
              ]
            },
            "description": "Update officer (Admin/Super-Admin only). Note: tinNumber, rating, verified cannot be updated."
          },
          "response": []
        },
        {
          "name": "Verify Officer",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/officers/:id/verify",
              "host": ["{{baseUrl}}"],
              "path": ["officers", ":id", "verify"],
              "variable": [
                {
                  "key": "id",
                  "value": "OFFICER_ID_HERE"
                }
              ]
            },
            "description": "Verify an officer (Admin/Super-Admin only)"
          },
          "response": []
        },
        {
          "name": "Suspend Officer",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/officers/:id/suspend",
              "host": ["{{baseUrl}}"],
              "path": ["officers", ":id", "suspend"],
              "variable": [
                {
                  "key": "id",
                  "value": "OFFICER_ID_HERE"
                }
              ]
            },
            "description": "Suspend an officer (soft delete) (Admin/Super-Admin only)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Service Categories",
      "description": "Service category management endpoints",
      "item": [
        {
          "name": "Get All Service Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/service-categories",
              "host": ["{{baseUrl}}"],
              "path": ["service-categories"]
            },
            "description": "Get all service categories"
          },
          "response": []
        },
        {
          "name": "Get Service Category by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/service-categories/:id",
              "host": ["{{baseUrl}}"],
              "path": ["service-categories", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "CATEGORY_ID_HERE"
                }
              ]
            },
            "description": "Get single service category by ID"
          },
          "response": []
        },
        {
          "name": "Create Service Category",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Legal Services\",\n  \"description\": \"Professional legal consultation and documentation services\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/service-categories",
              "host": ["{{baseUrl}}"],
              "path": ["service-categories"]
            },
            "description": "Create new service category"
          },
          "response": []
        },
        {
          "name": "Update Service Category",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Category Name\",\n  \"description\": \"Updated description\",\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/service-categories/:id",
              "host": ["{{baseUrl}}"],
              "path": ["service-categories", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "CATEGORY_ID_HERE"
                }
              ]
            },
            "description": "Update service category"
          },
          "response": []
        },
        {
          "name": "Delete Service Category",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/service-categories/:id",
              "host": ["{{baseUrl}}"],
              "path": ["service-categories", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "CATEGORY_ID_HERE"
                }
              ]
            },
            "description": "Soft delete service category (sets isActive to false)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Assignments",
      "description": "Officer-Category assignment endpoints (Admin/Super-Admin only)",
      "item": [
        {
          "name": "Get All Assignments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/assignments",
              "host": ["{{baseUrl}}"],
              "path": ["assignments"],
              "query": [
                {
                  "key": "officer",
                  "value": "OFFICER_ID",
                  "disabled": true
                },
                {
                  "key": "serviceCategory",
                  "value": "CATEGORY_ID",
                  "disabled": true
                },
                {
                  "key": "assignmentType",
                  "value": "OFFICER_CATEGORY",
                  "disabled": true
                }
              ]
            },
            "description": "Get all assignments with optional filters"
          },
          "response": []
        },
        {
          "name": "Get Assignment by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/assignments/:id",
              "host": ["{{baseUrl}}"],
              "path": ["assignments", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "ASSIGNMENT_ID_HERE"
                }
              ]
            },
            "description": "Get single assignment by ID"
          },
          "response": []
        },
        {
          "name": "Create Officer-Category Assignment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"officer\": \"OFFICER_ID_HERE\",\n  \"serviceCategory\": \"CATEGORY_ID_HERE\",\n  \"experienceYears\": 5,\n  \"assignmentType\": \"OFFICER_CATEGORY\",\n  \"reason\": \"Assigned based on expertise\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/assignments",
              "host": ["{{baseUrl}}"],
              "path": ["assignments"]
            },
            "description": "Create officer to category assignment"
          },
          "response": []
        },
        {
          "name": "Create Admin-Category Assignment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"serviceCategory\": \"CATEGORY_ID_HERE\",\n  \"assignmentType\": \"ADMIN_CATEGORY\",\n  \"reason\": \"Admin assignment for category management\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/assignments",
              "host": ["{{baseUrl}}"],
              "path": ["assignments"]
            },
            "description": "Create admin to category assignment (no officer required)"
          },
          "response": []
        },
        {
          "name": "Update Assignment",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"experienceYears\": 7,\n  \"reason\": \"Updated experience level\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/assignments/:id",
              "host": ["{{baseUrl}}"],
              "path": ["assignments", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "ASSIGNMENT_ID_HERE"
                }
              ]
            },
            "description": "Update assignment (only experienceYears and reason can be updated)"
          },
          "response": []
        },
        {
          "name": "Unassign (Soft Delete)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"No longer assigned to this category\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/assignments/:id/unassign",
              "host": ["{{baseUrl}}"],
              "path": ["assignments", ":id", "unassign"],
              "variable": [
                {
                  "key": "id",
                  "value": "ASSIGNMENT_ID_HERE"
                }
              ]
            },
            "description": "Soft delete assignment (sets isActive to false)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/",
          "host": ["http://localhost:3000"],
          "path": [""]
        },
        "description": "API Health check endpoint"
      },
      "response": []
    }
  ]
}


